<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="net.xicp.zyl_me.hibernate.User" table="user">
    <id name="userId" column="user_id">
      <generator class="native" />
    </id>
    <property name="userEmail" column="user_email" not-null="true" />
    <property name="userPassword" column="user_password" not-null="true" />
    <property name="userNickname" column="user_nickname" not-null="true" />
    <property name="userAvatar" column="user_avatar" />
    <property name="userIntroduction" column="user_introduction" />
  </class>
</hibernate-mapping>

